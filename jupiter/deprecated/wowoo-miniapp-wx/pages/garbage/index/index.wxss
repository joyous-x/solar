page{
    height: 100%;  
    background-color: #f6f6f6;
}

.container {
  width: 100%;
  height: 80%;
  display: flex;
  flex-direction: column;
  padding-top: 10px;
  padding-bottom: 60px;
  align-items: center;
  position:relative;
}

.ipt-view {
  width: 78%;
  margin: 5%;
  padding: 3%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search_btn {
  background-color: #f5f5f5;
  border-radius: 30rpx; 
  display: flex;
  padding: 3%;
  flex-direction: row;
  align-items: center;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22);
}
.search_btn::after {
  border-radius: 30rpx;
  border: 0;
}

.search_ipt {
  width: 76%;
  text-align: center;
  font-size: 25rpx;
  padding: 5rpx 15rpx;
  background: #dedede;
  border-radius: 15rpx;
  margin: 10rpx auto;
  height: 60rpx;
  line-height: 60rpx;
  align-items: center;
}

.ai-view {
  width: 36%;
  height: 28%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 5%;
  padding: 3%;
  border-radius: 10px;
  background-color: #f5f5f5;
  box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22);
}

.ai-view-voice {
  width: 36%;
  height: 28%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position:relative;
  margin: 5%;
  padding: 3%;
  border-radius: 10px;
  background-color: #f5f5f5;
  box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22);
}
