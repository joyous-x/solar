/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 20px;
  /* font-size: medium, large, larger, .etc */
  font-size: x-large;
  /* font-weight: 100-900 */
  font-weight: 400;
  /* font-style: oblique, italic, .etc */
  font-style: oblique;
}

.bg-wrapper{
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    z-index:-99;
}

.indexBgCover{
    width:100%;
    height:100%;
}