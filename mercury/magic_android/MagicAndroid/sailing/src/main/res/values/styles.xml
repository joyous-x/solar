<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaDialog.AppTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/blueSky</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="MaButton.Compat" parent="@style/Widget.AppCompat.Button">
        <!-- 取消 Button 字符默认大写的功能（会导致 Spannable 失效），默认值只影响 5.0 以上版本，但使用Compat包后，4.x 版本也会受到影响 -->
        <!-- http://stackoverflow.com/questions/29007746/button-settext-with-spannable-dosent-work-for-android-5-0-lollipop -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaDialog.Base" parent="Theme.AppCompat.Dialog">
        <item name="android:buttonStyle">@style/MaButton.Compat</item>

        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>